    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Application Directly",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "start:dev", "./${relativeFileDirname}/${fileBasename}"],
            "restart": false
        },  
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Test Directly",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "test", "./${relativeFileDirname}/${fileBasename}"],
            "restart": false
        },                
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to start:debug",
            "port": 4321,
            "restart": false,
            "cwd": "${workspaceRoot}"
          },
    ]
}