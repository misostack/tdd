{
  "name": "tdd",
  "version": "1.0.0",
  "description": "test driven development guidelines",
  "main": "dist/main.js",
  "scripts": {
    "start": "node ./dist/main.js",
    "start:debug": "ts-node-dev --transpile-only --exit-child --inspect=4321 --project tsconfig.dev.json src/main.ts",
    "start:dev": "ts-node-dev --transpile-only  --exit-child --project tsconfig.dev.json",    
    "build": "tsc -p tsconfig.production.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "tdd",
    "typescript",
    "jsbase",
    "nextjsvietnam"
  ],
  "author": "jsbase",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node16": "^16.1.1",
    "@types/node": "^20.5.7",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  }
}
